<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="book">
	<select id="list" resultType="Book">
		SELECT * FROM book
	</select>
	
	<select id="item" resultType="Book">
		SELECT * FROM book
		WHERE code=#{code}
	</select>
	
	<insert id="add">
		INSERT INTO book
		VALUES(NULL, #{bookname}, #{publisher}, #{price}, #{order})
	</insert>
	
	<update id="update">
		UPDATE book
		SET bookname=#{bookname}, publisher=#{publisher}, price=#{price}
		WHERE code=#{code}
	</update>
	
	<delete id="delete">
		DELETE FROM book
		WHERE code=#{code}
	</delete>
	
	<update id="saveOrder">
		UPDATE book
		SET order=#{map.order}
		WHERE code=#{map.code}
	</update>
</mapper>